generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("PSQL_CONNECTION_STRING")
}

model File {
  id        String   @id @default(uuid())
  name      String
  type      String
  size      Int
  path      String
  url       String?
  createdAt DateTime @default(now())
  folder    Folder?  @relation(fields: [folderId], references: [id])
  folderId  String?
}

model Folder {
  id        String   @id @default(uuid())
  name      String   @unique
  createdAt DateTime @default(now())
  files     File[]
}
