<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>File Uploader</title>
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
    <style>
        :root {
            --primary: #4285F4;
            --primary-dark: #3367D6;
            --error: #EA4335;
            --success: #34A853;
            --warning: #FBBC05;
            --text: #202124;
            --text-light: #5F6368;
            --light-gray: #f8f9fa;
            --white: #ffffff;
            --border-radius: 4px;
            --box-shadow: 0 1px 2px 0 rgba(60,64,67,0.3), 0 1px 3px 1px rgba(60,64,67,0.15);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Roboto', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body {
            background-color: var(--white);
            color: var(--text);
            line-height: 1.6;
        }

        header {
            display: flex;
            align-items: center;
            justify-content: space-between; /* This pushes children to opposite ends */
            padding: 8px 16px;
            border-bottom: 1px solid #e0e0e0;
        }

        .logo {
            display: flex;
            align-items: center;
        }

        .logo img {
            height: 40px;
            margin-right: 8px;
        }

        .logo h1 {
            font-size: 22px;
            font-weight: 400;
            color: var(--text-light);
        }

        .user-avatar {
            width: 32px;
            height: 32px;
            border-radius: 50%;
            background-color: var(--primary);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .main-container {
            display: flex;
            min-height: calc(100vh - 57px);
        }

        .sidebar {
            width: 280px;
            padding: 16px 0;
            border-right: 1px solid #e0e0e0;
        }

        .sidebar-item {
            display: flex;
            align-items: center;
            padding: 8px 24px;
            cursor: pointer;
            border-radius: 0 25px 25px 0;
        }

        .sidebar-item:hover {
            background-color: #f1f3f4;
        }

        .sidebar-item.active {
            background-color: #e8f0fe;
            color: var(--primary);
        }

        .sidebar-item i {
            margin-right: 16px;
            font-size: 20px;
        }

        .content {
            flex-grow: 1;
            padding: 24px;
        }

        .new-button {
            position: relative;
            padding: 24px;
        }

        .new-button button {
            background-color: var(--primary);
            color: white;
            border: none;
            border-radius: 4px;
            padding: 8px 24px 8px 16px;
            font-size: 14px;
            font-weight: 500;
            display: flex;
            align-items: center;
            cursor: pointer;
        }

        .new-button button:hover {
            background-color: var(--primary-dark);
            box-shadow: var(--box-shadow);
        }

        .new-button button i {
            margin-right: 8px;
        }

        .new-menu {
            position: absolute;
            top: 100%;
            left: 0;
            background-color: var(--white);
            border-radius: 4px;
            box-shadow: var(--box-shadow);
            width: 200px;
            z-index: 100;
            display: none;
        }

        .new-menu.show {
            display: block;
        }

        .new-menu-item {
            padding: 12px 16px;
            display: flex;
            align-items: center;
            cursor: pointer;
        }

        .new-menu-item:hover {
            background-color: #f1f3f4;
        }

        .new-menu-item i {
            margin-right: 16px;
            color: var(--text-light);
        }

        .files-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
            gap: 16px;
        }

        .file-item, .folder-item {
            border-radius: var(--border-radius);
            padding: 16px;
            cursor: pointer;
            text-align: center;
        }

        .file-item:hover, .folder-item:hover {
            background-color: #f1f3f4;
        }

        .item-icon {
            width: 48px;
            height: 48px;
            margin: 0 auto 8px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .folder-icon {
            color: var(--warning);
        }

        .file-icon {
            color: var(--primary);
        }

        .item-name {
            font-size: 14px;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0,0,0,0.5);
            z-index: 1000;
            align-items: center;
            justify-content: center;
        }

        .modal.show {
            display: flex;
        }

        .modal-content {
            background-color: var(--white);
            border-radius: var(--border-radius);
            box-shadow: var(--box-shadow);
            width: 480px;
            max-width: 90%;
            padding: 24px;
        }

        .modal-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 24px;
        }

        .modal-header h2 {
            font-weight: 400;
            font-size: 20px;
        }

        .close-button {
            background: none;
            border: none;
            font-size: 24px;
            cursor: pointer;
            color: var(--text-light);
        }

        .form-group {
            margin-bottom: 16px;
        }

        .form-group label {
            display: block;
            margin-bottom: 8px;
            color: var(--text-light);
        }

        .form-group input, .form-group select {
            width: 100%;
            padding: 8px 12px;
            border: 1px solid #e0e0e0;
            border-radius: var(--border-radius);
        }

        .modal-footer {
            display: flex;
            justify-content: flex-end;
            margin-top: 24px;
        }

        .modal-footer button {
            padding: 8px 16px;
            border-radius: var(--border-radius);
            cursor: pointer;
        }

        .cancel-button {
            background: none;
            border: 1px solid #e0e0e0;
            margin-right: 8px;
        }

        .create-button {
            background-color: var(--primary);
            color: white;
            border: none;
        }

        .create-button:hover {
            background-color: var(--primary-dark);
        }

        .alert {
            padding: 12px 16px;
            border-radius: var(--border-radius);
            margin-bottom: 16px;
            display: flex;
            align-items: center;
        }

        .alert-error {
            background-color: #fce8e6;
            color: var(--error);
        }

        .alert-success {
            background-color: #e6f4ea;
            color: var(--success);
        }

        .alert i {
            margin-right: 8px;
        }
    </style>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body>
    <header>
        <div class="logo">
            <img src="https://www.gstatic.com/images/branding/product/1x/drive_2020q4_48dp.png" alt="Drive Logo">
            <h1>File Uploader</h1>
        </div>
        <div class="user-avatar">B</div>
    </header>

    <div class="main-container">
        <div class="sidebar">
            <div class="sidebar-item active">
                <i class="material-icons">home</i>
                <span>My Files</span>
            </div>
            <div class="new-button">
                <button onclick="toggleNewMenu()">
                    <i class="material-icons">add</i>
                    New
                </button>
                <div class="new-menu" id="newMenu">
                    <div class="new-menu-item" onclick="showModal('folder')">
                        <i class="material-icons">create_new_folder</i>
                        <span>Folder</span>
                    </div>
                    <div class="new-menu-item" onclick="showModal('file')">
                        <i class="material-icons">upload</i>
                        <span>File upload</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="content">
            <% if (error) { %>
                <div class="alert alert-error">
                    <i class="material-icons">error</i>
                    <%= error %>
                </div>
            <% } %>
            
            <% if (success) { %>
                <div class="alert alert-success">
                    <i class="material-icons">check_circle</i>
                    <%= success %>
                </div>
            <% } %>

            <div class="files-grid">
                <% folders.forEach(folder => { %>
                    <div class="folder-item">
                        <div class="item-icon folder-icon">
                            <i class="material-icons" style="font-size: 48px;">folder</i>
                        </div>
                        <div class="item-name"><%= folder.name %></div>
                    </div>
                <% }); %>

                <% files.forEach(file => { %>
                    <div class="file-item">
                        <div class="item-icon file-icon">
                            <i class="material-icons" style="font-size: 48px;">insert_drive_file</i>
                        </div>
                        <div class="item-name"><%= file.name %></div>
                    </div>
                <% }); %>
            </div>
        </div>
    </div>

    <!-- New Folder Modal -->
    <div class="modal" id="folderModal">
        <div class="modal-content">
            <div class="modal-header">
                <h2>New folder</h2>
                <button class="close-button" onclick="hideModal('folder')">&times;</button>
            </div>
            <form action="/create-folder" method="POST">
                <div class="form-group">
                    <label for="folderName">Folder name</label>
                    <input type="text" name="folderName" id="folderName" required>
                </div>
                <div class="modal-footer">
                    <button type="button" class="cancel-button" onclick="hideModal('folder')">Cancel</button>
                    <button type="submit" class="create-button">Create</button>
                </div>
            </form>
        </div>
    </div>

    <!-- File Upload Modal -->
    <div class="modal" id="fileModal">
        <div class="modal-content">
            <div class="modal-header">
                <h2>Upload files</h2>
                <button class="close-button" onclick="hideModal('file')">&times;</button>
            </div>
            <form action="/upload" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="file">Select files</label>
                    <input type="file" name="file" id="file" required>
                </div>
                <div class="form-group">
                    <label for="folderId">Location</label>
                    <select name="folderId" id="folderId">
                        <option value="">My Drive</option>
                        <% folders.forEach(folder => { %>
                            <option value="<%= folder.id %>"><%= folder.name %></option>
                        <% }); %>
                    </select>
                </div>
                <div class="modal-footer">
                    <button type="button" class="cancel-button" onclick="hideModal('file')">Cancel</button>
                    <button type="submit" class="create-button">Upload</button>
                </div>
            </form>
        </div>
    </div>

    <script>
        // Toggle New menu
        function toggleNewMenu() {
            const menu = document.getElementById('newMenu');
            menu.classList.toggle('show');
        }

        // Close New menu when clicking outside
        document.addEventListener('click', function(event) {
            const newButton = document.querySelector('.new-button');
            const newMenu = document.getElementById('newMenu');
            
            if (!newButton.contains(event.target)) {
                newMenu.classList.remove('show');
            }
        });

        // Modal functions
        function showModal(type) {
            document.getElementById(`${type}Modal`).classList.add('show');
            document.getElementById('newMenu').classList.remove('show');
        }

        function hideModal(type) {
            document.getElementById(`${type}Modal`).classList.remove('show');
        }
    </script>
</body>
</html>
