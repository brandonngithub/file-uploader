<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>File Uploader</title>
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
    <link rel="stylesheet" href="/styles/folder.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body>
    <header>
        <h1>File Uploader</h1>
        <div class="user-avatar">B</div>
    </header>

    <div class="main">
        <div class="sidebar">
            <div class="sidebar-item" onclick="window.location.href='/'">
                <i class="material-icons">home</i>
                <span>Home</span>
            </div>
            <div class="sidebar-item active">
                <i class="material-icons">folder</i>
                <span><%= folder.name %></span>
            </div>
        </div>

        <div class="content">
            <% if (error) { %>
                <div class="alert alert-error">
                    <i class="material-icons">error</i>
                    <%= error %>
                </div>
            <% } %>
            
            <% if (success) { %>
                <div class="alert alert-success">
                    <i class="material-icons">check_circle</i>
                    <%= success %>
                </div>
            <% } %>
        
            <div class="files-table-container">
                <table class="files-table">
                    <thead>
                        <tr>
                            <th class="name-column">Name</th>
                            <th class="type-column">Type</th>
                            <th class="size-column">Size</th>
                            <th class="modified-column">Modified</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% files.forEach(file => { %>
                            <tr class="file-row">
                                <td class="name-cell">
                                    <div class="file-info">
                                        <i class="material-icons file-icon">insert_drive_file</i>
                                        <span class="item-name"><%= file.name %></span>
                                    </div>
                                </td>
                                <td><%= file.type.toUpperCase() %></td>
                                <td><%= formatFileSize(file.size) %></td>
                                <td><%= formatDate(file.createdAt) %></td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script>
        // Format file size helper (same as in your main view)
        function formatFileSize(bytes) {
            if (!bytes) return '0 Bytes';
            const k = 1024;
            const sizes = ['Bytes', 'KB', 'MB', 'GB'];
            const i = Math.floor(Math.log(bytes) / Math.log(k));
            return parseFloat((bytes / Math.pow(k, i)).toFixed(2)) + ' ' + sizes[i];
        }
        
        // Format date helper
        function formatDate(date) {
            return new Date(date).toLocaleString('en-US', {
                month: 'short',
                day: 'numeric',
                year: 'numeric',
                hour: '2-digit',
                minute: '2-digit'
            });
        }
    </script>
</body>
</html>
